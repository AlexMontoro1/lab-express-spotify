<div class="container">

  {{#if this.foundArtist.items}}
    {{#each this.foundArtist.items}}
      <div class="artistContainer">

        {{#if this.images.[0]}}
          <img
            src="{{this.images.[0].url}}"
            width="250px"
            height="200px"
            alt="artista"
          />
        {{/if}}
        <p>{{this.name}}</p>
        <button>
          <a href="/albums/{{this.id}}"> View Albums </a>
        </button>

      </div>
    {{/each}}
  {{else}}
    <div>
      <h3>There are no artists with this name</h3>
    </div>
  {{/if}}

</div>